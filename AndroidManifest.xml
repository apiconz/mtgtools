<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.apiconz.apps.mtgtools"
    android:versionCode="1"
    android:versionName="1.0" >
 
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="pe.apiconz.apps.mtgtools.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pe.apiconz.apps.mtgtools.CardListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="pe.apiconz.apps.mtgtools.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="pe.apiconz.apps.mtgtools.CardDetailActivity"
            android:label="@string/app_name"
            android:parentActivityName="pe.apiconz.apps.mtgtools.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.apiconz.apps.mtgtools.MainActivity" />
        </activity>
        <activity
            android:name="pe.apiconz.apps.mtgtools.AboutMeActivity"
            android:label="@string/app_name"
            android:parentActivityName="pe.apiconz.apps.mtgtools.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.apiconz.apps.mtgtools.MainActivity" />
        </activity>
    </application>

</manifest>